<div class="pt-4 pb-4 searchbar">
    <%= form_with url: bathrooms_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a room to meet your specific 'needs'"
       %>
       <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
  </div>
